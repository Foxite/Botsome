{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Botsome": {
    "Items": [
      {
        "Trigger": {
          "Type": "EmoteNameAsMessage",
          "EmoteName": "botsome"
        },
        "RespondUsing": "Random",
        "Responses": [{
          "Type": "EmoteNameAsReaction",
          "Response": "botsome"
        }]
      },
      {
        "Trigger": {
          "Type": "MessageContent",
          "MessageRegex": "\\bsus\\b",
          "OnlyInChannels": [
            880203972596617276
          ]
        },
        "RespondUsing": "All",
        "Responses": [{
          "Type": "Message",
          "Response": "sus"
        }]
      },
      {
        "Trigger": {
          "Type": "MessageContent",
          "MessageRegex": "\uD83E\uDD8A" /* Fox emoji */
        },
        "RespondUsing": "Random",
        "Responses": [{
          "Type": "Message",
          "Response": "fox"
        }]
      },
      {
        "Trigger": {
          "Type": "EmoteNameAsMessage",
          "EmoteName": "flushedfish"
        },
        "RespondUsing": "Random",
        "Responses": [{
          "Type": "EmoteNameAsMessage",
          "Response": "flushedfish"
        }]
      }
    ]
  }
}
